    node1:
      ansible_host: k8s-node-1.local
      ansible_user: pi
      ansible_ssh_private_key_file: ~/.ssh/borjis-rsa
      kubernetes_role: node

    node2:
      ansible_host: k8s-node-2.local
      ansible_user: pi
      ansible_ssh_private_key_file: ~/.ssh/borjis-rsa
      kubernetes_role: node

    node3:
      ansible_host: k8s-node-3.local
      ansible_user: pi
      ansible_ssh_private_key_file: ~/.ssh/borjis-rsa
      kubernetes_role: control_plane

k8s_cluster:
  children:
    control_plane:
    nodes: